.carousel
  text-align left
  max-width 580px
  margin 2em auto
  &-content
    &[open]
      .carousel
        &-header
          border none
          &::-webkit-details-marker
            color var(--softRed)
      .u-p
        text-align left
  &-header
    padding 1.5em 0
    border-bottom 1px solid var(--light-gray)
    font-size .9em
    cursor pointer
    &:focus
      outline none
    &::-webkit-details-marker
      color var(--softBlu)
      float right
  @media screen and (min-width 1024px)
    border-top 1px solid var(--light-gray)