@import './hero.styl'
@import './header.styl'
@import './features.styl'
@import './download.styl'
@import './questions.styl'
@import './join.styl'
@import './footer.styl'

:root
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)
  --light-gray: #e5e5e5

body
  font-family: 'Rubik', sans-serif
  color var(--veryDarkBlue)
  margin 0
  font-size 18px

ul
  padding 0
  margin 0
  list-style none

.is-hidden
  display none

.u-wrapper
  max-width 1280px
  margin auto
  padding 1em

.u-h1
  font-size 2em
  font-weight 500

.u-h2
  @extends .u-h1

.u-h4
  @extends .u-h1
  font-size 1.3em
  margin-top .5em
.u-p
  color var(--grayishBlue)
  line-height 1.5
  font-size .9em

.u-button
  background var(--softBlue)
  color white
  padding 1em 1em
  font-size .9em
  font-weight bold
  border-radius .5em
  border none
  outline none
  cursor pointer
  margin-left .5em
  box-shadow 0 5px 10px -4px var(--grayishBlue)
  box-shadow x y blur spread color
  &:first-of-type
    margin 0
  &.is-red
    background var(--softRed)
    color white
    width 100%
  &.is-gray
    background #f7f7f7
    color var(--veryDarkBlue)
  &.is-fullWidth
    width 100%