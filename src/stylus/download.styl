.download
  text-align center
  padding 3em 0
  .u-wrapper
    > .u-p
      margin-bottom 3em
  &-grid
    margin-top 3em
    display grid
    grid-row-gap 2em
    margin 0 1em
  &-item
    border-radius 1em
    padding 1.5em
    background url('../images/bg-dots.svg') repeat-x center bottom 100px
    box-shadow 0 10px 11px -5px rgba(83, 104, 233, .3)
    .u-p
      margin-bottom 4em
      margin-top .5rem
    .u-h3
      margin-bottom .5rem
      margin-top 1.5rem
